
@{
    ViewBag.Title = "Add Images";
}

<h2>@ViewBag.Title</h2>

<style>
    #loadingImg {
        display: none;
    }
</style>

@using (Html.BeginForm())
{
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <br/>
    <div class="row">
    <div id="uploader" class="form-group">
        <div class="col-md-10">
            <div><input type="file" id="fileInput" class="btn btn-primary" name="Images" multiple></div>
            <br />
            <input type="button" id="fileButton" class="btn btn-default" value="Upload Files" />
            <img src="~/Content/Res/loader.gif" id="loadingImg"  style="width:150px; height:150px"/>
        </div>
        </div>    
    </div>
    @*<input type="file" id="fileInput" multiple />*@
    @*<input type="button" id="fileButton" value="Upload Files" /><br />*@

}


